<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 추후 Relative 레이아웃 등  다른 레이아웃으로 변경 -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_setting_second_et"
        android:textSize="8pt"
        android:hint="2017년  6월 17일"
        />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="마태복음 11장 (본문)"
            android:textSize="8pt"
            android:id="@+id/bible_setting_second_et"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:text="오늘의 말씀입니다"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_qt_table_et"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:maxLines="10"
        />

    <!--<ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/todays_verse_lv"
        android:layout_marginTop="20dp"
        >

    </ListView>-->


</LinearLayout>

</ScrollView>